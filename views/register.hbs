<div class="auth-wrapper">
	<div class="alert alert-placeholder">&nbsp;</div>
	<div class="auth-body">
		<h1 class="sr-only">Register</h1>
		<div class="auth-box">
			<div class="auth-box-brand"><a href="/" class="auth-box-logo"><img src="/images/logoColored.png" alt="medilab logo"></a>
			</div>
			<form method="post" class="auth-form" action="/users/register">
				{{#if errors}}
					{{#each errors}}
						<div class="alert alert-danger">{{msg}}</div>
					{{/each}}
				{{/if}}
				<div class="col-sm-12 form-group">
					<label for="nome">Nome</label>
					<input type="text" name="nome" id="nome" value="{{#if nome}}{{nome}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-md-6 col-sm-12 form-group">
					<label for="cpf">CPF</label>
					<input type="text" name="cpf" id="cpf" value="{{#if cpf}}{{cpf}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-md-6 col-sm-12 form-group">
					<label for="telefone">Telefone</label>
					<input type="text" name="telefone" id="telefone" value="{{#if telefone}}{{telefone}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-sm-12 form-group">
					<label for="endereco">Endereço</label>
					<input type="text" name="endereco" id="endereco" value="{{#if endereco}}{{endereco}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-sm-12 form-group">
					<label for="email">Email</label>
					<input type="email" name="email" id="email" value="{{#if email}}{{email}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-sm-12 form-group">
					<label for="login">Login</label>
					<input type="text" name="login" id="login" value="{{#if login}}{{login}}{{/if}}" class="form-control" required>
				</div>
				<div class="col-md-6 col-sm-12 form-group">
					<label for="password">Senha</label>
					<input type="password" name="password" id="password" class="form-control" required>
				</div>
				<div class="col-md-6 col-sm-12 form-group">
					<label for="password2">Confirme a senha</label>
					<input type="password" name="password2" id="password2" class="form-control">
				</div>
				<div class="col-md-6 col-sm-12 form-group">
					<button type="submit" class="btn btn-primary">Registrar!</button>
				</div>
			</form>
		</div>
		<div class="auth-register">
			Já possui cadastro? <a href="/users/login">Faça login!</a>
		</div>
	</div>
	<div class="auth-footer">Powered by <a href="http://www.brunoborta.com.br">Bruno Bortagaray</a></div>
</div>
